<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Required for reading gallery images on API 33+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Fallback for API <= 32 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <!-- Required for writing files to external storage on API <= 28.
         On API 29+ the SAF (Storage Access Framework) grants URI-based access
         without a runtime permission, so no extra permission is needed there. -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CraftNook">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CraftNook">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
